{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny":false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": true,
        "declarationDir": "./dist/types",
        "moduleResolution": "Node",
        "types": ["node"],
        "esModuleInterop": true,
        "outDir": "dist",
        "allowJs": true
    },
    "include": ["index.ts", "test/index.ts"],
    "exclude": ["example/**"]
}
